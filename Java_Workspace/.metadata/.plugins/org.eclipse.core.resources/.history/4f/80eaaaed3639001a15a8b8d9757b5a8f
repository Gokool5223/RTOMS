package com.app.dao;

import java.util.List;

import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.app.pojos.Questions;

@Service
@Transactional
public class QuestionsDaoImpl implements IQuestionsDao {
	@Autowired
	private SessionFactory sf;

	@Override
	public List<Questions> listQuestions() {
		String jpql="select q from Questions q where languageId=:languageId ORDER BY questionId DESC ";
		return sf.getCurrentSession().createQuery(jpql,Questions.class).getResultList();
	}

	@Override
	public void saveQuestions(Questions questions) {
		sf.getCurrentSession().save(questions);
		
		
	}

